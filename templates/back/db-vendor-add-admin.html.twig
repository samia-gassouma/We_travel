{% extends 'base2.html.twig' %}
    {% block title %}Gestion Hotel{% endblock %}
    {% block content %}
<body data-barba="wrapper">
    <div class="dashboard" data-x="dashboard" data-x-toggle="-is-sidebar-open">
        <div class="dashboard__sidebar bg-white scroll-bar-1">


            <div class="sidebar -dashboard">

                <div class="sidebar__item">
                    <div class="sidebar__button -is-active">
                        <a href="{{ path('app_db-dashboard') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{asset('img/dashboard/sidebar/booking.svg')}}" alt="image" class="mr-15">
              Dashboard
            </a>
                    </div>
                </div>

                <div class="sidebar__item">
                    <div class="sidebar__button ">
                        <a href="{{ path('app_db-booking') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{asset('img/dashboard/sidebar/booking.svg')}}" alt="image" class="mr-15">
              Booking History
            </a>
                    </div>
                </div>

                <div class="sidebar__item">
                    <div class="sidebar__button ">
                        <a href="{{ path('app_db-wishlist') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{asset('img/dashboard/sidebar/bookmark.svg')}}" alt="image" class="mr-15">
              Wishlist
            </a>
                    </div>
                </div>

                <div class="sidebar__item">
                    <div class="sidebar__button ">
                        <a href="{{ path('app_db-settings') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{asset('img/dashboard/sidebar/gear.svg')}}" alt="image" class="mr-15">
              Settings
            </a>
                    </div>
                </div>

                <div class="sidebar__item">
                    <div class="sidebar__button ">
                        <a href="{{path('app_logout') }}" class="d-flex items-center text-15 lh-1 fw-500">
              <img src="{{asset('img/dashboard/sidebar/log-out.svg')}}" alt="image" class="mr-15">
              Logout
            </a>
                    </div>
                </div>

            </div>


        </div>

        <div class="dashboard__main">
            <div class="dashboard__content bg-light-2">
                <div class="row y-gap-20 justify-between items-end pb-60 lg:pb-40 md:pb-32">
                    <div class="col-auto">

                        <h1 class="text-30 lh-14 fw-600">Add Admin </h1>
                        <div class="text-15 text-light-1">modify and add admin</div>

                    </div>
                </div>


                <div class="py-30 px-30 rounded-4 bg-white shadow-3">
                    <div class="tabs -underline-2 js-tabs">
                        <div class="tabs__controls row x-gap-40 y-gap-10 lg:x-gap-20 js-tabs-controls">

                            <div class="col-auto">
                                <button class="tabs__button text-18 lg:text-16 text-light-1 fw-500 pb-5 lg:pb-0 js-tabs-button is-tab-el-active" data-tab-target=".-tab-item-1">1. Content</button>
                            </div>
                        </div>
                        
                        <div class="tabs__content pt-30 js-tabs-content">
                            <div class="tabs__pane -tab-item-1 is-tab-el-active">
                                <div class="col-xl-10">
                                    <div class="text-18 fw-500 mb-10">User content</div>
                                    <div class="row x-gap-20 y-gap-20">
                                    {{ form_start(registrationForm) }}
                                        <div class="col-12">

                                            <div class="form-input ">
                                                {{ form_widget(registrationForm.Nom) }}
                                                <label class="lh-1 text-16 text-light-1">First Name</label>
                                            </div>
                                            <div style="color: red; font-size: 12px;">
                                            {{ form_errors(registrationForm.Nom) }}
                                            </div>

                                        </div>
                                        <br>
                                        <div class="col-12">

                                            <div class="form-input ">
                                                {{ form_widget(registrationForm.prenom) }}
                                                <label class="lh-1 text-16 text-light-1">Last Name</label>
                                            </div>
                                             <div style="color: red; font-size: 12px;">
                                            {{ form_errors(registrationForm.prenom) }}
                                            </div>

                                        </div>
                                         <br>
                                        <div class="col-12">

                                            <div class="form-input ">
                                                {{ form_widget(registrationForm.email) }}
                                                <label class="lh-1 text-16 text-light-1">Email</label>
                                            </div>
                                            <div style="color: red; font-size: 12px;">
                                            {{ form_errors(registrationForm.email) }}
                                            </div>
                                        </div>
                                         <br>
                                        <div class="col-12">

                                            <div class="form-input ">
                                                {{ form_widget(registrationForm.plainPassword.first) }}
                                                <label class="lh-1 text-16 text-light-1">Password</label>
                                            </div>
                                            <div style="color: red; font-size: 12px;">
                                            {{ form_errors(registrationForm.plainPassword.first) }}
                                            </div>
                                        </div>
                                         <br>
                                        <div class="col-12">

                                            <div class="form-input ">
                                                {{ form_widget(registrationForm.plainPassword.second) }}
                                                <label class="lh-1 text-16 text-light-1">Confirmer Password</label>
                                            </div>
                                            <div style="color: red; font-size: 12px;">
                                            {{ form_errors(registrationForm.plainPassword.second) }}
                                            </div>
                                        </div>
                                         <br>
                                        <div class="col-12">

                                    <div class="d-flex ">
                                        <div class="form-checkbox mt-5">
                                            {{form_widget(registrationForm.agreeTerms)}}
                                            <div class="form-checkbox__mark">
                                                <div class="form-checkbox__icon icon-check"></div>
                                            </div>
                                            
                                        </div>
                                        
                                        <div class="text-15 lh-15 text-light-1 ml-10">Email me exclusive Agoda promotions. I can opt out later as stated in the Privacy Policy.</div>
                                        
                                    </div>
                                    
                                    <div style="color: red;font-size: 12px;">
                                                {{ form_errors(registrationForm.agreeTerms) }}
                                            </div>
                                    </div>
                                     <br>
                                    <div class="col-12">
                                <button id="signInButton" class="button py-20 -dark-1 bg-blue-1 text-white" type="submit" style="width: 450px;">
                                    Add admin / modifier <div class="icon-arrow-top-right ml-15"></div>
                                </button>
                            </div>
                            {{ form_end(registrationForm) }}
                                    </div

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
</body>
{% endblock %}