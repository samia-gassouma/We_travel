{% extends 'base3.html.twig' %}
{% block title %}Contact{% endblock %}
{% block content %}


<section class="layout-pt-md layout-pb-md">
    <div class="container">
        <div class="row y-gap-30">
            <div class=""><!--  col-lg-6 -->
                <div class="text-22 fw-500">Tabs</div>

                <div class="tabs -underline-2 pt-60 lg:pt-40 sm:pt-30 js-tabs">
                    <div class="tabs__controls row x-gap-40 y-gap-10 lg:x-gap-20 js-tabs-controls">

                        <div class="col-auto">
                            <button
                                class="tabs__button text-light-1 fw-500 px-5 pb-5 lg:pb-0 js-tabs-button is-tab-el-active"
                                data-tab-target=".-tab-item-1">Formulaire</button>
                        </div>

                        <div class="col-auto">
                            <button class="tabs__button text-light-1 fw-500 px-5 pb-5 lg:pb-0 js-tabs-button "
                                data-tab-target=".-tab-item-2">Affichage</button>
                        </div>

                        <div class="col-auto">
                            <button class="tabs__button text-light-1 fw-500 px-5 pb-5 lg:pb-0 js-tabs-button "
                                data-tab-target=".-tab-item-3">items 3</button>
                        </div>

                    </div>

                    <div class="tabs__content pt-20 js-tabs-content">

                        <div class="tabs__pane -tab-item-1 is-tab-el-active">
                            {{ form_start(form, {'attr': {'class': 'layout-pt-md layout-pb-md'}, 'novalidate':
                            'novalidate'}) }}

                            {% if form.vars.submitted %}
                            <div class="h4 alert alert-{{ form.vars.valid ? 'success' : 'warning' }}">
                                {{ (form.vars.valid ? 'form_valid' : 'form_not_valid')|trans({}, 'post_26') }}
                            </div>
                            {% elseif form.vars.valid is not null %}
                            {# Display the message when the form is not submitted but has been initialized #}
                            <div class="h4 alert alert-success">
                                {{ 'form_valid'|trans({}, 'post_26') }}
                            </div>
                            {% endif %}

                            <div class="container">

                                <div class="row">
                                    <div class="col-12">
                                        <div class="text-22 fw-500">Formulaire</div>
                                    </div>
                                </div>

                                <div class="row x-gap-60 y-gap-30 pt-30">
                                    <div class="col-lg-6">

                                        <div class="fw-500 mb-10">{{ form_label(form.date) }}</div>

                                        {{ form_widget(form.date, {'attr': {'class': 'form-input', 'type':
                                        'datetime-local', 'format': 'd-m-Y H:i:s'}}) }}
                                        {{ form_errors(form.date, {'attr': {'class': 'form-error','style':'color:
                                        red;'}}) }}

                                    </div>

                                    <div class="col-lg-6">
                                        <label class="text-16 lh-1 fw-500 text-dark-1 mb-10">{{ form_label(form.type)
                                            }}</label>
                                        <div class="select js-select js-liveSearch" data-select-value="">
                                            {{ form_widget(form.type, {'attr': {'class': 'custom-dropdown'}}) }}
                                            <i class="select__icon" data-feather="chevron-down"></i>
                                        </div>
                                        <div>
                                            {{ form_errors(form.type, {'attr': {'class': 'form-error'}}) }}
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        {{ form_row(form.reservation, {'attr': {'style': 'display: none;'}}) }}
                                        {{ form_errors(form.reservation, {'attr': {'class': 'form-error'}}) }}
                                    </div>

                                    <div class="col-lg-6">
                                        {{ form_row(form.paiement, {'attr': {'style': 'display: none;'}}) }}
                                        {{ form_errors(form.paiement, {'attr': {'class': 'form-error'}}) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="fw-500 mb-10">{{ form_label(form.description) }}</div>

                                        <div class="form-input">
                                            {{ form_widget(form.description) }}
                                        </div>
                                        <div>
                                            {{ form_errors(form.description, {'attr': {'class': 'form-error'}}) }}
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-auto">
                                        {{ form_widget(form.send, {'attr': {'class': 'button px-24 h-50 -dark-1
                                        bg-blue-1 text-white icon-arrow-top-right', 'style': 'margin-top: 50px;
                                        align-item: center; justify-content: center;'}}) }}
                                    </div>
                                </div>

                            </div>

                            {{ form_end(form, {'render_rest': false}) }}
                        </div>

                        <div class="tabs__pane -tab-item-2 ">
                            <div class="container">
                                <div class="row y-gap-30">
                                    <div class="col-lg-6">
                                        <div class="text-22 fw-500">Table</div>

                                        <table class="table-4 w-1/1 mt-30">
                                            <thead class="bg-light-2">
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Date</th>
                                                    <th>Type</th>
                                                    <th>reservation_id</th>
                                                    <th>paiement_id</th>
                                                    <th>Description</th>
                                                    <th>Statut</th>
                                                    <th>Action</th>
                                                    <th>Statut</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for r in list %}

                                                <tr>
                                                    <td>{{ r.id }} </td>
                                                    <td>{{ r.date | date('d,F,Y') }} </td>
                                                    <td>{{ r.type }} </td>
                                                    <td>{{ r.reservation }} </td>
                                                    <td>{{ r.paiement }} </td>
                                                    <td>{{ r.description }} </td>
                                                    <td>{{ r.Statut }} </td>
                                                    <td>

                                                        <button onclick="window.location.href='{{path('app_reclamation_edit',{'id':id,'id_r':r.id})}}';"
                                                            class="button -md -blue-1 bg-blue-1-05 text-blue-1 ">Modifier</button>
                                                        <button onclick="window.location.href='{{path('app_reclamation_remove',{'id':id,'id_r':r.id})}}';"
                                                            class="button -md -blue-1 bg-blue-1-05 text-blue-1">Supprimer</button>

                                                    </td>

                                                </tr>
                                                {% endfor %}

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tabs__pane -tab-item-3 ">

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


</section>


{# ,{'render_rest': false} #}

</main>



<!-- JavaScript -->
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAAz77U5XQuEME6TpftaMdX0bBelQxXRlM"></script>
<script src="https://unpkg.com/@googlemaps/markerclusterer/dist/index.min.js"></script>

<script src="js/vendors.js"></script>
<script src="js/main.js"></script>

<script>

    document.addEventListener('DOMContentLoaded', function () {
        var choiceField = document.querySelector('.custom-dropdown');
        var dynamicField1 = document.querySelector('.dynamic-field1');
        var dynamicField2 = document.querySelector('.dynamic-field2');
        choiceField.addEventListener('change', function () {
            if (choiceField.value === 'reservation') {
                dynamicField1.style.display = 'block';
                dynamicField2.style.display = 'none';
                // dynamicFieldLabel1.style.display = 'block';
            }
            else if (choiceField.value === 'paiement') {
                dynamicField2.style.display = 'block';
                dynamicField1.style.display = 'none';
            } else {
                dynamicField1.style.display = 'none';
                dynamicField2.style.display = 'none';
                dynamicFieldLabel1.style.display = 'none';
                dynamicFieldLabel2.style.display = 'none';
            }
        });
    });
</script>
</body>

</html>
{% endblock %}